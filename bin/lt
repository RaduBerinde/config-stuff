#!/bin/bash
timeout=10m
if [[ "$1" = -* || "$1" = "" ]]; then
  t="Logic"
else
  if [[ "$1" == *\/* ]]; then
    t="Logic/$1"
  else
    t="Logic//$1"
    timeout=30s
  fi
  shift
fi
set -x

export COCKROACH_DISTSQL_LOG_PLAN=1
make test PKG=./pkg/sql/logictest TESTS="$t" TESTFLAGS="-v --logtostderr NONE --show-logs --show-sql $*" TESTTIMEOUT=$timeout |& tee /tmp/log
