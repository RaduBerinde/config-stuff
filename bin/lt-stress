#!/bin/bash
if [[ "$1" = -* ]]; then
  t="Logic"
else
  if [[ "$1" == *\/* ]]; then
    t="Logic/$1"
  else
    t="Logic//$1"
  fi
  shift
fi
set -x

#export COCKROACH_DISTSQL_LOG_PLAN=1
# make stress PKG=./pkg/sql/logictest TESTS="$t" STRESSFLAGS='-p 8' |& tee /tmp/log
make stress PKG=./pkg/sql/logictest STRESSFLAGS='-p 4' TESTS="$t" TESTFLAGS="$*" |& tee /tmp/log
