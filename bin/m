#!/bin/bash

tmpfile=`mktemp`
trap "rm -f $tmpfile" EXIT

dir=`dirname $0`
$dir/mc > $tmpfile 2>&1 &
pid1=$!

make test &
pid2=$!


wait $pid1
rc1=$?

if [ $rc1 -ne 0 ]; then
  echo ""
  cat $tmpfile
  echo ""
else
  echo -e "\nmc PASSED\n"
fi

wait $pid2
rc2=$?

if [ $rc1 -ne 0 ]; then
  exit $rc1
fi

exit $rc2
