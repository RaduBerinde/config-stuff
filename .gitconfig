[user]
	name = Radu Berinde
	email = radu.berinde@gmail.com
[color]
  status = always
[push]
	default = matching
[diff]
	tool = vimdiff
	external = git-diff-wrapper.sh
[alias]
	amend = commit -a --amend --no-edit
	amendmsg = commit --amend
	reword = commit --amend
	pushall = push origin --all -f
  difftxt = diff --no-ext-diff
[merge]
	tool = p4merge
[pager]
	diff = 
   
[http]
	cookiefile = /root/.gitcookies
[mergetool]
	keepBackup = false
